# SRPK Pro Production Environment Configuration

# Application Settings
APP_NAME=SRPK Pro
APP_ENV=production
APP_DEBUG=false
APP_URL=https://app.srpk.io
API_URL=https://api.srpk.io

# Database Configuration
DATABASE_URL=postgresql://srpk_user:${DB_PASSWORD}@postgres:5432/srpk_db
DB_PASSWORD=generate_secure_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=generate_secure_redis_password

# Stripe Configuration (Test Keys - Replace with Live Keys for Production)
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=whsec_generate_from_stripe_dashboard

# PayPal Configuration
PAYPAL_CLIENT_ID=generate_from_paypal_dashboard
PAYPAL_CLIENT_SECRET=generate_from_paypal_dashboard
PAYPAL_MODE=sandbox  # Change to 'live' for production
PAYPAL_WEBHOOK_ID=generate_from_paypal_dashboard

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.generate_from_sendgrid
FROM_EMAIL=licenses@srpk.io
SUPPORT_EMAIL=support@srpk.io

# Security
SECRET_KEY=generate_very_secure_key_here
JWT_SECRET_KEY=generate_jwt_secret_key_here
ALLOWED_ORIGINS=https://srpk.io,https://app.srpk.io,https://api.srpk.io

# License Configuration
LICENSE_EXPIRY_DAYS=365
MAX_DEVICES_PER_LICENSE=5

# Download Configuration
DOWNLOAD_TOKEN_EXPIRY_HOURS=24
MAX_DOWNLOAD_ATTEMPTS=3

# AWS S3 Configuration (for secure downloads)
AWS_ACCESS_KEY_ID=generate_from_aws_console
AWS_SECRET_ACCESS_KEY=generate_from_aws_console
AWS_S3_BUCKET=srpk-downloads
AWS_S3_REGION=us-east-1

# Monitoring (optional)
SENTRY_DSN=optional_sentry_dsn
NEW_RELIC_LICENSE_KEY=optional_new_relic_key

# GitHub Integration
GITHUB_TOKEN=generate_github_token
GITHUB_WEBHOOK_SECRET=generate_webhook_secret

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=msc-tecnologia
DOCKER_PASSWORD=use_github_token_here