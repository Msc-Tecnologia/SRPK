# SRPK Pro Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=SRPK Pro
APP_ENV=production
APP_DEBUG=false
APP_URL=https://app.srpk.io
API_URL=https://api.srpk.io

# Database Configuration
DATABASE_URL=postgresql://srpk_user:your_secure_password@postgres:5432/srpk_db
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # or 'live' for production
PAYPAL_WEBHOOK_ID=your_webhook_id

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=licenses@srpk.io
SUPPORT_EMAIL=support@srpk.io

# Security
SECRET_KEY=your_very_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ALLOWED_ORIGINS=https://srpk.io,https://app.srpk.io,https://api.srpk.io

# License Configuration
LICENSE_EXPIRY_DAYS=365
MAX_DEVICES_PER_LICENSE=5

# Download Configuration
DOWNLOAD_TOKEN_EXPIRY_HOURS=24
MAX_DOWNLOAD_ATTEMPTS=3

# AWS S3 Configuration (for secure downloads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=srpk-downloads
AWS_S3_REGION=us-east-1

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# GitHub Integration
GITHUB_TOKEN=your_github_token
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=msc-tecnologia
DOCKER_PASSWORD=your_github_token